 public static void bubbleSort (int [] a) {

        for (int i = 0; i < a.length - 1; ++i)
            for (int k = 0 ; k  < a.length - 1 - i; ++k)
                if (a[k] > a[k + 1]) {
                    int temp = a[k];
                    a[k] = a[k + 1];
                    a[k + 1] = temp;
                }

 } //